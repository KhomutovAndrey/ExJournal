<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_jour_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rad"
        android:minHeight="@dimen/journal_card_heigh"
        app:cardCornerRadius="@dimen/rad">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/rad"
            android:gravity="center"
            android:text="@string/journals" />

        <TextView
            android:id="@+id/tvOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/rad"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/rad"
            android:paddingBottom="@dimen/rad"
            android:text="&#8942;"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>
</LinearLayout>